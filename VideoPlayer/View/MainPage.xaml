<Page
    x:Class="VideoPlayer.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VideoPlayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:UI="using:Microsoft.Advertising.WinRT.UI"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:modles="using:VideoPlayer.Modles"
    xmlns:modle="using:VideoPlayer.Modle"
    mc:Ignorable="d"
    Background="{ThemeResource grid_themeAcrylicBrush}"
    Loaded="Page_Loaded"
    RequestedTheme="Light">
    <Page.Resources>
        <ResourceDictionary>
            <Storyboard x:Name="show_bottom">
                <DoubleAnimation Storyboard.TargetName="Bottom_Grid" 
                                 Storyboard.TargetProperty="Y" 
                                 From="0" 
                                 To="85" 
                                 Duration="0:0:0.7"/>
            </Storyboard>
            <Storyboard x:Name="show_bottom_2">
                <DoubleAnimation Storyboard.TargetName="Bottom_Grid" 
                                 Storyboard.TargetProperty="Y"
                                 From="85" 
                                 To="0"
                                 Duration="0:0:0.3"/>
            </Storyboard>

            <!--<Storyboard x:Name="hide_metadataGrid">
                <DoubleAnimation Storyboard.TargetName="metadata_Grid" 
                                 Storyboard.TargetProperty="X" 
                                 From="10" 
                                 To="310" 
                                 Duration="0:0:0.2"/>
            </Storyboard>
            <Storyboard x:Name="show_metadataGrid">
                <DoubleAnimation Storyboard.TargetName="metadata_Grid" 
                                 Storyboard.TargetProperty="X"
                                 From="310" 
                                 To="10"
                                 Duration="0:0:0.2"/>
            </Storyboard>-->

            <Storyboard x:Name="hide_settingsGrid">
                <DoubleAnimation Storyboard.TargetName="settings_Grid" 
                                 Storyboard.TargetProperty="X" 
                                 From="5" 
                                 To="-260" 
                                 Duration="0:0:0.2"/>
            </Storyboard>
            <Storyboard x:Name="show_settingsGrid">
                <DoubleAnimation Storyboard.TargetName="settings_Grid" 
                                 Storyboard.TargetProperty="X"
                                 From="-260" 
                                 To="5"
                                 Duration="0:0:0.2"/>
            </Storyboard>
            <modle:ProgressConvert x:Key="progressConvert"/>
        </ResourceDictionary>
    </Page.Resources>
    <Grid Name="main_grid"
          AllowFocusOnInteraction="False">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="650"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="hideView_button.(RelativePanel.AlignTopWithPanel)" Value="False"/>
                        <Setter Target="hideView_button.(RelativePanel.AlignVerticalCenterWithPanel)" Value="True"/>
                        <Setter Target="volume_button.(RelativePanel.AlignTopWithPanel)" Value="False"/>
                        <Setter Target="volume_button.(RelativePanel.AlignVerticalCenterWithPanel)" Value="True"/>
                        <Setter Target="playMode_button.(RelativePanel.AlignBottomWithPanel)" Value="False"/>
                        <Setter Target="playMode_button.(RelativePanel.AlignLeftWithPanel)" Value="False"/>
                        <Setter Target="playMode_button.(RelativePanel.AlignVerticalCenterWithPanel)" Value="True"/>
                        <Setter Target="playMode_button.(RelativePanel.RightOf)" Value="hideList_button"/>
                        <Setter Target="hideList_button.(RelativePanel.AlignTopWithPanel)" Value="False"/>
                        <Setter Target="hideList_button.(RelativePanel.AlignVerticalCenterWithPanel)" Value="True"/>
                        <Setter Target="showTime_textBlock.(RelativePanel.AlignTopWithPanel)" Value="False"/>
                        <Setter Target="showTime_textBlock.(RelativePanel.AlignVerticalCenterWithPanel)" Value="True"/>
                        <Setter Target="fullScreen_button.(RelativePanel.AlignBottomWithPanel)" Value="False"/>
                        <Setter Target="fullScreen_button.(RelativePanel.AlignVerticalCenterWithPanel)" Value="True"/>
                        <Setter Target="fullScreen_button.(RelativePanel.LeftOf)" Value="showTime_textBlock"/>
                        <Setter Target="playRate_button.(RelativePanel.AlignRightWithPanel)" Value="False"/>
                        <Setter Target="playRate_button.(RelativePanel.AlignBottomWithPanel)" Value="False"/>
                        <Setter Target="playRate_button.(RelativePanel.AlignVerticalCenterWithPanel)" Value="True"/>
                        <Setter Target="playRate_button.(RelativePanel.RightOf)" Value="next_button"/>
                        <Setter Target="metadata_button.(RelativePanel.AlignBottomWithPanel)" Value="False"/>
                        <Setter Target="metadata_button.(RelativePanel.AlignVerticalCenterWithPanel)" Value="True"/>
                        <Setter Target="addFolders_button.(RelativePanel.AlignBottomWithPanel)" Value="False"/>
                        <Setter Target="addFolders_button.(RelativePanel.AlignVerticalCenterWithPanel)" Value="True"/>
                        <Setter Target="addFolders_button.(RelativePanel.RightOf)" Value="playMode_button"/>
                        <Setter Target="refreshVideos_button.(RelativePanel.RightOf)" Value="addFolders_button"/>
                        <Setter Target="refreshVideos_button.(RelativePanel.AlignBottomWithPanel)" Value="False"/>
                        <Setter Target="refreshVideos_button.(RelativePanel.AlignVerticalCenterWithPanel)" Value="True"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="FilmsName_textBlock" 
                   FontSize="20" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top"/>
        <Grid x:Name="multiple_grid"
              Grid.Row="1"
              Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1"
                        Orientation="Horizontal">
                <ListBox x:Name="multiple_listBox"
                         AllowFocusOnInteraction="True"
                         Background="Transparent">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBoxItem x:Name="allSelect_item">
                        <CheckBox x:Name="allSelect_checkBox"
                                  x:Uid="allSelect_checkBox"/>
                    </ListBoxItem>
                    <ListBoxItem x:Name="removeLisbox_item">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"
                                       Text="&#xE74D;"
                                       VerticalAlignment="Center"/>
                            <ComboBox x:Name="remove_comboBox"
                                      Width="150"
                                      Margin="5,0,0,0">
                                <ComboBoxItem x:Name="fromlist_item"
                                              x:Uid="fromlist_item"/>
                                <ComboBoxItem x:Name="frombin_item"
                                              x:Uid="frombin_item"/>
                                <ComboBoxItem x:Name="remove_item"
                                              x:Uid="remove_item"/>
                            </ComboBox>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:Name="progressLisbox_item">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"
                                       Text="&#xED62;"/>
                            <TextBlock x:Name="clearProgress_textBlock"
                                       x:Uid="clearProgress_textBlock"
                                       Margin="5,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:Name="multipleLisbox_item">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets"
                                       FontSize="20"
                                       Text="&#xE947;"/>
                            <TextBlock x:Name="cancelMultiple_textBlock"
                                       x:Uid="cancelMultiple_textBlock"
                                       Margin="5,0,0,0"/>
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </StackPanel>
        </Grid>
        <ScrollViewer x:Name="ads_scrollViewer"
                      Grid.Row="2"
                      ScrollViewer.HorizontalScrollMode="Auto"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollMode="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <StackPanel x:Name="ads_stackPanel"
                        Grid.Row="2"
                        Orientation="Horizontal"
                        Margin="0,0,0,15">
                <UI:AdControl x:Name="ad_control"
                              ApplicationId="9n6jvkjh4ffl"
                              AdUnitId="1100039270"
                              Height="50"
                              Width="300"
                              Margin="0,0,5,0"/>
                <UI:AdControl x:Name="ad_control2"
                              ApplicationId="9n6jvkjh4ffl"
                              AdUnitId="1100039414"
                              Height="50"
                              Width="320"
                              Margin="0,0,5,0"/>
                <UI:AdControl x:Name="ad_control3"
                              ApplicationId="9n6jvkjh4ffl"
                              AdUnitId="1100039415"
                              Height="50"
                              Width="300"
                              Margin="0,0,5,0"/>
                <UI:AdControl x:Name="ad_control4"
                              ApplicationId="9n6jvkjh4ffl"
                              AdUnitId="1100039416"
                              Height="50"
                              Width="320"
                              Margin="0,0,5,0"/>
                <UI:AdControl x:Name="ad_control7"
                              ApplicationId="9n6jvkjh4ffl"
                              AdUnitId="1100039417"
                              Height="50"
                              Width="320"
                              Margin="0,0,5,0"/>
                <UI:AdControl x:Name="ad_control8"
                              ApplicationId="9n6jvkjh4ffl"
                              AdUnitId="1100039418"
                              Height="50"
                              Width="320"/>
            </StackPanel>
        </ScrollViewer>
        <Grid x:Name="view_grid"
              Grid.Row="3">
            <GridView Name="content_gridView"        
                      ItemsSource="{x:Bind use_video}"
                      AllowDrop="True"
                      CanReorderItems="True"
                      IsSwipeEnabled="True"
                      IsItemClickEnabled="True"
                      ScrollViewer.HorizontalScrollMode="Auto" 
                      ScrollViewer.HorizontalScrollBarVisibility="Auto"
                      ScrollViewer.VerticalScrollMode="Disabled"
                      ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <GridView.Header>
                    <Grid Name="progressRing_grid"
                          Width="200"
                          Visibility="Collapsed">
                        <ProgressRing Name="content_progressRing"
                                      Height="50"
                                      Width="50"                                          
                                      Foreground="DodgerBlue"
                                      VerticalAlignment="Center"
                                      Style="{StaticResource progressRing_style}"/>
                    </Grid>
                </GridView.Header>
                <GridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsStackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </GridView.ItemsPanel>
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="modles:Video">
                        <StackPanel Name="videoList_stackPanle"    
                                    IsTapEnabled="False"
                                    RightTapped="VideoList_stackPanle_RightTapped">
                            <local:ListViewControl/>
                            <StackPanel.ContextFlyout>
                                <MenuFlyout x:Name="listView_menu">
                                    <MenuFlyoutItem Name="play_menuItem"
                                                    x:Uid="play_menuItem"
                                                    Click="play_menuItem_Click"/>
                                    <MenuFlyoutItem Name="pause_menuItem"
                                                    x:Uid="pause_menuItem"
                                                    Click="pause_menuItem_Click"/>
                                    <MenuFlyoutSubItem Name="autoPlay_menuItem"
                                                       x:Uid="autoPlay_menuItem">
                                        <MenuFlyoutItem Name="single_item"
                                                        x:Uid="single_item"
                                                        Click="Scyle_item_Click"/>
                                        <MenuFlyoutItem Name="list_item"
                                                        x:Uid="list_item"
                                                        Click="List_item_Click"/>
                                        <MenuFlyoutItem Name="listScyle_item"
                                                        x:Uid="listScyle_item"
                                                        Click="ListScyle_item_Click"/>
                                        <MenuFlyoutItem Name="default_item"
                                                        x:Uid="default_item"
                                                        Click="Default_item_Click"/>
                                    </MenuFlyoutSubItem>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutSubItem x:Name="clearProgress_item"
                                                       x:Uid="clearProgress_item">
                                        <MenuFlyoutItem x:Name="clear_item"
                                                        x:Uid="clear_item"
                                                        Click="Clear_item_Click"/>
                                        <MenuFlyoutItem x:Name="clearAll_item"
                                                        x:Uid="clearAll_item"
                                                        Click="ClearAll_item_Click"/>
                                    </MenuFlyoutSubItem>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem Name="delete_menuItem"
                                                    x:Uid="delete_menuItem"
                                                    Click="delete_menuItem_Click"/>
                                    <MenuFlyoutSubItem Name="deleteLocal_menuItem"
                                                       x:Uid="deleteLocal_menuItem">
                                        <MenuFlyoutItem Name="bin_item"
                                                        x:Uid="bin_item"
                                                        Click="bin_item_Click"/>
                                        <MenuFlyoutItem Name="directly_item"
                                                        x:Uid="directly_item"
                                                        Click="directly_item_Click"/>
                                    </MenuFlyoutSubItem>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem x:Name="multiple_item"
                                                    x:Uid="multiple_item"
                                                    Click="Multiple_item_Click"/>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem Name="cancel_menuItem"
                                                    x:Uid="cancel_menuItem"/>
                                </MenuFlyout>
                            </StackPanel.ContextFlyout>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>
        <MediaElement Name="main_mediaElement"
                      AutoPlay="False"
                      Grid.Row="4"                                  
                      AreTransportControlsEnabled="False">
            <MediaElement.ContextFlyout>
                <MenuFlyout>
                    <MenuFlyoutItem x:Name="screenShot_item"
                                    x:Uid="screenShot_item"
                                    Click="ScreenShot_item_Click"/>
                </MenuFlyout>
            </MediaElement.ContextFlyout>
        </MediaElement>
        <!--<Grid x:Name="metadata_gird"
              Visibility="Collapsed"
              Grid.Row="3"
              Grid.RowSpan="2"
              HorizontalAlignment="Right"
              VerticalAlignment="Bottom"
              Margin="0,0,0,85"
              Height="200">
