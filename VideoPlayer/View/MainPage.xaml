        <Grid x:Name="settings_gird"
              Visibility="Collapsed"
              Grid.Row="3"
              Grid.RowSpan="2"
              HorizontalAlignment="Left"
              VerticalAlignment="Bottom"
              Height="150"
              Margin="0,0,0,85">
            <Grid.RenderTransform>
                <TranslateTransform x:Name="settings_Grid"/>
            </Grid.RenderTransform>
            <controls:DropShadowPanel BlurRadius="8.45"
                                      ShadowOpacity="0.3"
                                      OffsetX="-5"
                                      OffsetY="5">
                <Grid Width="260">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,10">
                            <Button x:Name="audioLanguage_button"
                                    Style="{StaticResource button_Style}"
                                    Content="&#xED1F;">
                                <Button.Flyout>
                                    <!--<Flyout x:Name="audioLanguage_flyout">
                                        <ListBox x:Name="audioLanguage_listBox"
                                                 Margin="-9"
                                                 AllowFocusOnInteraction="True">
                                        </ListBox>
                                    </Flyout>-->
                                    <MenuFlyout x:Name="audioLanguage_flyout">
                                        
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                            <Button x:Name="videoTracks_button"
                                    Style="{StaticResource button_Style}"
                                    Content="&#xE8AA;">
                                <Button.Flyout>
                                    <!--<Flyout x:Name="videoTracks_flyout">
                                        <ListBox x:Name="videoTracks_listbox"
                                                 Margin="-9"
                                                 AllowFocusOnInteraction="True">
                                        </ListBox>
                                    </Flyout>-->
                                    <MenuFlyout x:Name="videoTracks_flyout">
                                        
                                    </MenuFlyout>
                                </Button.Flyout>
                            </Button>
                            <Button x:Name="fillMode_button"
                                    Style="{StaticResource button_Style}"
                                    Content="&#xE8B2;">
                                <Button.Flyout>
                                    <!--<Flyout x:Name="resizeVideo_flyout">
                                        <ListBox x:Name="resizeVideo_listBox"
                                                 Margin="-10"
                                                 AllowFocusOnInteraction="True">
                                            <ListBoxItem x:Name="None_item"
                                                         x:Uid="None_item"/>
                                            <ListBoxItem x:Name="Uniform_item"
                                                         x:Uid="Uniform_item"/>
                                            <ListBoxItem x:Name="UniformToFill_item"
                                                         x:Uid="UniformToFill_item"/>
                                            <ListBoxItem x:Name="Fill_item"
                                                         x:Uid="Fill_item"/>
                                        </ListBox>
                                    </Flyout>-->
                                    <MenuBarItemFlyout>
                                        <MenuFlyoutItem x:Name="None_item"
                                                        x:Uid="None_item"
                                                        Click="None_item_Click"/>
                                        <MenuFlyoutItem x:Name="Uniform_item"
                                                        x:Uid="Uniform_item"
                                                        Click="Uniform_item_Click"/>
                                        <MenuFlyoutItem x:Name="UniformToFill_item"
                                                        x:Uid="UniformToFill_item"
                                                        Click="UniformToFill_item_Click"/>
                                        <MenuFlyoutItem x:Name="Fill_item"
                                                        x:Uid="Fill_item"
                                                        Click="Fill_item_Click"/>
                                    </MenuBarItemFlyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0,10">
                            <Button x:Name="settings_button"
                                    Style="{StaticResource button_Style}"
                                    Content="&#xE713;"
                                    Click="Settings_button_Click"/>
                            <!--<Button x:Name="theme_button"
                                                Style="{StaticResource button_Style}"
                                                Content="&#xE793;"
                                                Click="Theme_button_Click"/>-->
                            <Button x:Name="transCode_button"
                                    Style="{StaticResource button_Style}"
                                    Content="&#xE8AB;"
                                    Click="TransCode_button_Click"/>
                        </StackPanel>
                    </StackPanel>
                    <Button x:Name="closeSettings_button"
                            FontFamily="Segoe MDL2 Assets"
                            Content="&#xE8BB;"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Style="{StaticResource button_Style}"
                            FontSize="10"
                            Click="CloseSettings_button_Click"/>
                    <AutoSuggestBox x:Name="search_autoSuggestBox"
                                    Grid.Row="1"
                                    AllowFocusOnInteraction="True"
                                    QueryIcon="Find"
                                    PlaceholderText="Search"
                                    Margin="5,0,5,0"
                                    QuerySubmitted="Search_autoSuggestBox_QuerySubmitted"
                                    TextChanged="Search_autoSuggestBox_TextChanged"/>
                </Grid>
            </controls:DropShadowPanel>
        </Grid>
        <TextBlock x:Name="dateTime_textBlock"
                   Visibility="Collapsed"
                   Grid.Row="2"
                   Foreground="WhiteSmoke"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"/>
        <Grid x:Name="click_grid"
              Grid.Row="4"
              VerticalAlignment="Bottom"
              Height="50"
              Margin="1,0,0,0"
              Background="Transparent"
              PointerEntered="Click_grid_PointerEntered"/>
        <Grid x:Name="bottom_grid"
              Grid.Row="4"
              Height="85"
              VerticalAlignment="Bottom"
              BorderThickness="1">
            <Grid.RenderTransform>
                <TranslateTransform x:Name="Bottom_Grid"/>
            </Grid.RenderTransform>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Border x:Name="bottom_border"
                    Grid.RowSpan="2"
                    Background="Black"
                   Opacity="0.3"/>
            <Slider x:Name="progress_slider"
                    Margin="0,0,0,-25"
                    Grid.Row="1"
                    Style="{StaticResource customSliderStyle}"
                    Minimum="0"
                    IsThumbToolTipEnabled="False"
                    Foreground="WhiteSmoke"
                    Value="{Binding ElementName=main_mediaElement,Path=Position,Converter={StaticResource progressConvert},Mode=TwoWay}"/>
            <!--<controls:DropShadowPanel BlurRadius="8.45"
                                  ShadowOpacity="0.5"
                                  OffsetX="0"
                                  OffsetY="6.61"
                                  Color="Black">-->
            <RelativePanel>
                <Button x:Name="play_button"  
                        Style="{StaticResource button_Style}"
                        Content="&#xE768;"
                        RelativePanel.AlignHorizontalCenterWithPanel="True"
                        RelativePanel.AlignVerticalCenterWithPanel="True"/>
                <Button x:Name="previous_button"    
                        IsEnabled="False"
                        Style="{StaticResource button_Style}"
                        Content="&#xE892;"
                        RelativePanel.LeftOf="play_button"
                        RelativePanel.AlignVerticalCenterWithPanel="True"/>
                <Button x:Name="playMode_button"
                        Style="{StaticResource button_Style}"
                        Content="&#xE8D8;"
                        RelativePanel.AlignLeftWithPanel="True"
                        RelativePanel.AlignBottomWithPanel="True"/>
                <Button x:Name="hideList_button"
                        Style="{StaticResource button_Style}"
                        Content="&#xEA37;"
                        RelativePanel.RightOf="volume_button"
                        RelativePanel.AlignTopWithPanel="True"/>
                <Button x:Name="addFolders_button"
                        Style="{StaticResource button_Style}"
                        Content="&#xE8F4;"
                        RelativePanel.RightOf="playMode_button"
                        RelativePanel.AlignBottomWithPanel="True"
                        Click="AddFolders_button_Click"/>
                <Button x:Name="refreshVideos_button"
                        Style="{StaticResource button_Style}"
                        Content="&#xE72C;"
                        RelativePanel.RightOf="addFolders_button"
                        RelativePanel.AlignBottomWithPanel="True"
                        Click="RefreshVideos_button_Click"/>
                <Button x:Name="hideView_button"
                        Style="{StaticResource button_Style}"
                        Content="&#xE70E;"
                        RelativePanel.AlignLeftWithPanel="True"
                        RelativePanel.AlignTopWithPanel="True"/>
                <Button x:Name="next_button" 
                        IsEnabled="False"
                        Style="{StaticResource button_Style}"
                        Content="&#xE893;"
                        RelativePanel.RightOf="play_button"
                        RelativePanel.AlignVerticalCenterWithPanel="True"/>
                <Button x:Name="playRate_button" 
                        Style="{StaticResource button_Style}"
                        Content="&#xEC57;"
                        RelativePanel.AlignRightWithPanel="True"
                        RelativePanel.AlignBottomWithPanel="True">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Name="item_0_1"
                                            Text="0.1x"/>
                            <MenuFlyoutItem x:Name="item_0_2"
                                            Text="0.2x"/>
                            <MenuFlyoutItem x:Name="item_0_3"
                                            Text="0.3x"/>
                            <MenuFlyoutItem x:Name="item_0_4"
                                            Text="0.4x"/>
                            <MenuFlyoutItem x:Name="item_0_5"
                                            Text="0.5x"/>
                            <MenuFlyoutItem x:Name="item_1_0"
                                            x:Uid="item_1_0"/>
                            <MenuFlyoutItem x:Name="item_1_5"
                                            Text="1.5x"/>
                            <MenuFlyoutItem x:Name="item_2_0"
                                            Text="2.0x"/>
                            <MenuFlyoutItem x:Name="item_2_5"
                                            Text="2.5x"/>
                            <MenuFlyoutItem x:Name="item_3_0"
                                            Text="3.0x"/>
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <Button x:Name="metadata_button" 
                        Style="{StaticResource button_Style}"
                        Content="&#xE775;"
                        RelativePanel.LeftOf="fullScreen_button"
                        RelativePanel.AlignBottomWithPanel="True">
                    <Button.Flyout>
                        <Flyout>
                            <StackPanel>
                                <TextBlock x:Uid="metadata_textBlock"
                                           FontSize="13"
                                           Margin="0,-10,0,10"
                                           HorizontalAlignment="Center"/>
                                <StackPanel x:Name="metadata_StackPanel"
                                        Margin="-10"/>
                            </StackPanel>
                            
                        </Flyout>
                    </Button.Flyout>
                </Button>
                <Button x:Name="volume_button"    
                        Style="{StaticResource button_Style}"
                        Content="&#xE767;"
                        RelativePanel.RightOf="hideView_button"
                        RelativePanel.AlignTopWithPanel="True">
                    <Button.Flyout>
                        <Flyout>
                            <Grid>
                                <Button x:Name="volumeIcon_button"
                                        Margin="-10,0,0,0"
                                        Style="{StaticResource button_Style_2}"       
                                        FontSize="15"
                                        HorizontalAlignment="Left"
                                        Content="&#xE767;"/>
                                <Slider x:Name="volume_slider"
                                        Margin="20,0,20,0"
                                        Width="150"
                                        Minimum="0"
                                        Maximum="100"
                                        Value="30"                                                 
                                        HorizontalAlignment="Center"/>
                                <TextBlock x:Name="volume_textBlock"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Margin="0,0,-5,3"
                                           Text="{Binding ElementName=volume_slider,Path=Value}"/>
                            </Grid>
                        </Flyout>
                    </Button.Flyout>
                </Button>
                <Button x:Name="fullScreen_button"
                        Style="{StaticResource button_Style}"
                        Content="&#xE740;"
                        RelativePanel.LeftOf="playRate_button"
                        RelativePanel.AlignBottomWithPanel="True"/>
                <TextBlock x:Name="showTime_textBlock"
                           Text="00:00:00 / 00:00:00"
                           RelativePanel.AlignRightWithPanel="True"
                           RelativePanel.AlignTopWithPanel="True"
                           Foreground="WhiteSmoke"                                          
                           FontSize="17"/>
            </RelativePanel>
        </Grid>
        <ContentDialog x:Name="addFolder_contentDialog"
                       Background="{ThemeResource grid_themeAcrylicBrush}"
                       CornerRadius="10">
            <Grid Height="400"
                  Width="400">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="addFolderLibrary_textBlock"
                           x:Uid="addFolderLibrary_textBlock"
                           FontSize="18"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>
                <Button x:Name="addFolder_button"
                        Grid.Row="1"
                        Style="{StaticResource ButtonRevealStyle}"
                        FontFamily="Segoe MDL2 Assets"
                        Content="&#xE710;"
                        Height="50"
                        FontSize="30"     
                        BorderThickness="0"
                        HorizontalAlignment="Stretch"
                        FocusVisualPrimaryThickness="2"/>
                <ListView x:Name="FolderLibrary_gridview"
                          Grid.Row="2"
                          ItemsSource="{x:Bind videoLibrary_collection}">
                    <!--<ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel Margin="0,0,0,50"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>-->
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="modle:VideoLibrary">
                            <controls:DropShadowPanel BlurRadius="10"
                                                      ShadowOpacity="0.5"
                                                      OffsetX="7"
                                                      OffsetY="10"
                                                      Color="SteelBlue"   
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center">
                                <Grid Margin="10"
                                      Width="350">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Button FontFamily="Segoe MDL2 Assets"
                                            Content="&#xE8B7;"
                                            Style="{StaticResource button_Style_2}"
                                            FontSize="30"
                                            VerticalAlignment="Center"
                                            Click="Button_Click"/>
                                    <StackPanel Grid.Column="1"
                                                Margin="10,0,0,0"
                                                Orientation="Vertical"
                                                HorizontalAlignment="Stretch">
                                        <TextBlock x:Name="FolderName_textBlock"
                                                   FontSize="15"
                                                   TextWrapping="Wrap"
                                                   FontWeight="Bold"
                                                   Text="{x:Bind FolderName}"/>
                                        <TextBlock x:Name="FolderPath_textBlock"
                                                   FontSize="13"
                                                   TextWrapping="Wrap"
                                                   Text="{x:Bind FolderPath}"/>
                                    </StackPanel>
                                    <Button x:Name="deleteFolder_button"
                                            Grid.Column="2"
                                            Content="&#xECC9;"
                                            Style="{StaticResource button_Style_2}"
                                            VerticalAlignment="Center"
                                            Click="DeleteFolder_button_Click"/>
                                </Grid>
                            </controls:DropShadowPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button x:Name="closeDialog_Button"
                        Grid.Row="3"
                        x:Uid="closeDialog_Button"
                        Style="{StaticResource ButtonRevealStyle}"
                        Background="Transparent"
                        HorizontalAlignment="Right"
                        Click="CloseDialog_Button_Click"/>
            </Grid>
        </ContentDialog>
    </Grid>
</Page>
