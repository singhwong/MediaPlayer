<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VideoPlayer.Style">
    <ResourceDictionary.ThemeDictionaries>
        <ResourceDictionary x:Key="Default">
            <AcrylicBrush x:Key="themeAcrylicBrush"
                TintColor="{ThemeResource SystemChromeMediumLowColor}"
                TintOpacity="0.9"
                FallbackColor="{ThemeResource SystemChromeMediumLowColor}"
                BackgroundSource="HostBackdrop" />
            <AcrylicBrush x:Key="grid_themeAcrylicBrush"
                TintColor="{ThemeResource SystemChromeMediumLowColor}"
                TintOpacity="0.3"
                FallbackColor="{ThemeResource SystemChromeMediumLowColor}"
                BackgroundSource="HostBackdrop" />
        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
